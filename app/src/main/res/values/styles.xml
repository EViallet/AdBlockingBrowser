<resources>

    <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
        <item name="android:background">@color/colorLVBackground</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="BrowserTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="D" parent="android:Theme.Material.NoActionBar.Fullscreen" />

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert"/>

</resources>
