<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/relat"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/fragment_default_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:id="@+id/fragment_default_button"
            android:layout_below="@id/fragment_default_logo"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/search"
            android:layout_marginEnd="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/fragment_default_search"
            android:layout_height="30dp"
            android:paddingStart="7dp"
            android:layout_toStartOf="@id/fragment_default_button"
            android:background="@drawable/search_bar"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/fragment_default_logo"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Rechercher..."/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_tabcards_ll"
        android:layout_height="75dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/btn_tab_undo"
            android:src="@drawable/tab_undo"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="75dp"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/btn_tab_rem"
            android:src="@drawable/tab_rem"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="75dp"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/btn_tab_add"
            android:src="@drawable/tab_add"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_below="@id/relat"
        android:layout_above="@id/fragment_tabcards_ll"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:clipToPadding="false" />
</RelativeLayout>