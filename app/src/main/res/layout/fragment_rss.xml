<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relatLayoutRss"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:elevation="15dp"
        android:orientation="horizontal"
        android:background="@color/colorTextWebView"
        android:weightSum="1">

        <ImageView
            android:layout_width="40dp"
            android:id="@+id/rss_pic"
            android:layout_height="40dp"
            android:padding="2dp"
            android:src="@drawable/rss"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />
        <ImageButton
            android:id="@+id/rss_tab"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/colorTextWebView"
            app:srcCompat="@mipmap/ic_dots2"
            android:layout_alignParentEnd="true"
            android:elevation="20dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/rss_text"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/rss_pic"
            android:layout_toStartOf="@id/rss_tab"
            android:background="@color/colorTextWebView"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Flux rss"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:hint=""
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rss_drawer"
        android:background="@color/colorDrawer"
        android:layout_below="@id/relatLayoutRss"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <ImageButton
            android:id="@+id/activity_rss_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tab_add"
            android:scaleType="centerCrop"/>
        <ImageButton
            android:id="@+id/activity_rss_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/notification_edit"
            android:scaleType="centerCrop"
            android:layout_below="@id/activity_rss_add"/>
        <ImageButton
            android:id="@+id/activity_rss_stared"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/star"
            android:scaleType="centerCrop"
            android:layout_below="@id/activity_rss_edit"/>
        <ImageButton
            android:id="@+id/activity_rss_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_settings"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/rss_refreshlayout"
        android:layout_height="match_parent"
        android:layout_below="@id/relatLayoutRss"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/rss_drawer">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rss_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>